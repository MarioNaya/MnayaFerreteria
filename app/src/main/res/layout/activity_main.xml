<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopantalla"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagenLogo"
            android:layout_width="412dp"
            android:layout_height="305dp"
            app:srcCompat="@drawable/ferreterialogotransparente" />

        <EditText
            android:id="@+id/campoUsuario"
            android:layout_width="306dp"
            android:layout_height="63dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edittext_redondeado"
            android:ems="10"
            android:hint="@string/usuario"
            android:inputType="text"
            android:tag="@string/usuario"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#949191" />

        <EditText
            android:id="@+id/campoPass"
            android:layout_width="306dp"
            android:layout_height="63dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/edittext_redondeado"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:tag="@string/password"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#949191" />

        <Button
            android:id="@+id/btnAcceder"
            android:layout_width="306dp"
            android:layout_height="68dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="#165873"
            android:text="@string/acceder"
            android:textColor="#F8F4F4"
            android:textColorLink="#F8F4F4" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>